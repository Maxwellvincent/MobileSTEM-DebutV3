{% for block in section.blocks %}
    {% case block.type %}
        {% when 'rich-text' %}
        {% include 'rich-text-on-page' %}
        {% when 'video' %}
        {% include 'video-on-page' %}
    {% endcase %}
{% endfor %}


{% schema %}
{
    "name": "Mobile STEM Dynamic,
    "blocks": [{
        "name" : "Landing Page Image",
        "type": "Hero",
        "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Name of this section"
        },
        {
            "type": "textarea",
            "id": "page_handle",
            "label": "The pages where this image is shown"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Choose an image"
        }
        ]       
    }
    ]
}
{% endschema %}